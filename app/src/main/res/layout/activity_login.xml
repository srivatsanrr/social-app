<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.srivatsan.perceptron.Login">


    <EditText
        android:id="@+id/pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_alignTop="@+id/username"
        android:layout_alignLeft="@+id/username"
        android:layout_alignStart="@+id/username" />

    <EditText
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="247dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/Bsup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background = "@android:color/transparent"
        android:layout_alignEnd="@+id/Blogin"
        android:layout_alignLeft="@+id/Blogin"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/Blogin"
        android:layout_alignStart="@+id/Blogin"
        android:layout_marginBottom="29dp"
        android:text="New User? Sign up!" />

    <Button
        android:id="@+id/Blogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/pwd"
        android:layout_alignLeft="@+id/pwd"
        android:layout_alignRight="@+id/pwd"
        android:layout_alignStart="@+id/pwd"
        android:layout_below="@+id/pwd"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Login" />

    <Button
        android:id="@+id/Bforgotpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="15sp"
        android:inputType="textPersonName"
        android:text="Forgot Password? Click here!"
        android:background = "@android:color/transparent"
        android:textAlignment="center"
        android:layout_above="@+id/Bsup"
        android:layout_alignLeft="@+id/Bsup"
        android:layout_alignStart="@+id/Bsup"
        android:layout_alignRight="@+id/Bsup"
        android:layout_alignEnd="@+id/Bsup"
        android:layout_below="@+id/Blogin" />


</RelativeLayout>